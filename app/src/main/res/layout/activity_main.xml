<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F4FAF9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Espacio para Logo -->
        <ImageView
            android:id="@+id/logoApp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/logo_bookswaap"
            android:contentDescription="Logo" />

        <!-- Título -->
        <TextView
            android:text="BookSwaap"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#112125"
            android:layout_marginBottom="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Campo Email -->
        <EditText
            android:id="@+id/editEmail"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="12dp"
            android:background="@drawable/input_style"
            android:drawablePadding="8dp"
            android:textColor="#112125"
            android:textColorHint="#7A8A8C"/>

        <!-- Campo Password -->
        <EditText
            android:id="@+id/editPassword"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="14dp"
            android:padding="12dp"
            android:background="@drawable/input_style"
            android:textColor="#112125"
            android:textColorHint="#7A8A8C"/>

        <!-- Botón Login -->
        <Button
            android:id="@+id/btnLogin"
            android:text="LOGIN"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#468F95"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:translationZ="0dp"
            android:background="@drawable/button_primary" />

        <!-- Botón Signup -->
        <Button
            android:id="@+id/btnSignup"
            android:text="SIGN UP"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_secondary" />

        <!-- Frase final -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comparte tus libros, descubre nuevas historias"
            android:textSize="14sp"
            android:textColor="#112125"
            android:layout_marginTop="40dp"
            android:gravity="center" />

    </LinearLayout>

</ScrollView>
