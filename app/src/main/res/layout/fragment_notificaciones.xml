<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FAF9"
    android:paddingTop="24dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloNotifs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notificaciones"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:textColor="#112125" />

    <!-- Estado / Mensaje (vacío / "Cargando..." / "No tienes notificaciones") -->
    <TextView
        android:id="@+id/textEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargando notificaciones..."
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:textColor="#7A8A8C" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerNotificaciones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- espacio para botones de navegación del teléfono -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

</LinearLayout>
